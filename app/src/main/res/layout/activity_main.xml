<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewKelolaHewan"
        android:layout_width="142dp"
        android:layout_height="147dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banyak_hewan"
        android:background="@drawable/border_kotak"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_kelola_hewan"
        android:fontFamily="@font/amaranth"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageViewKelolaHewan"
        app:layout_constraintStart_toStartOf="@+id/imageViewKelolaHewan"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKelolaHewan" />
</androidx.constraintlayout.widget.ConstraintLayout>